<?xml version="1.0"?>
<robot name="my_simple_manipulator">
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    <material name="grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
    </material>
    <material name="light_grey">
        <color rgba="0.4 0.4 0.4 1.0"/>
    </material>
    <material name="lighter_grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
    </material>

    <link name='base_link'>
        <visual>
            <geometry>
                <box size='0.0 0.0 0.0'/>
            </geometry>
            <origin xyz='0.0 0.0 0.0' rpy='0.0 0.0 0.0' />
        </visual>      
    </link>

    <joint name='joint_base_link' type='fixed'>
        <origin xyz='0.0 0.0 0.0' rpy='0 0 0'/>
        <parent link='base_link'/>
        <child link='link0'/>
    </joint>

    <link name="link0">
        <visual>
            <geometry>
                <box size='0.5 0.5 0.1'/>
            </geometry>
            <origin xyz='0.0 0.0 0.0' rpy='0.0 0.0 0.0' />
        <material name="black"/>
        </visual>
    </link>

    <joint name="joint1" type="continuous">
        <parent link="link0"/>
        <child link="link1"/>
        <origin xyz="0 0 0.05" rpy="0 0 0.0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="link1">
        <visual>
            <geometry>
                <cylinder length="1.0" radius="0.05"/>
            </geometry>
            <origin xyz='0.0 0.0 0.5' rpy='0.0 0.0 0.0' />
        <material name="grey"/>
        </visual>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.07"/>
            </geometry>
            <origin xyz='0.0 0.0 1.0' rpy='1.57 0.0 0.0' />
        <material name="grey"/>
        </visual>
    </link>

    <joint name="joint2" type="continuous">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 1.0" rpy="1.57 -1.57 0.0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="link2">
        <visual>
            <geometry>
                <cylinder length="0.6" radius="0.03"/>
            </geometry>
            <origin xyz='0.3 0.0 0.0' rpy='0.0 1.57 0.0' />
        <material name="light_grey"/>
        </visual>
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04"/>
            </geometry>
            <origin xyz='0.6 0.0 0.0' rpy='0.0 0.0 0.0' />
        <material name="light_grey"/>
        </visual>
    </link>

    <joint name="joint3" type="continuous">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0.6 0.0 0.0" rpy="0 0 0.0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="link3">
        <visual>
            <geometry>
                <cylinder length="0.4" radius="0.02"/>
            </geometry>
            <origin xyz='0.2 0.0 0.0' rpy='0.0 1.57 0.0' />
        <material name="lighter_grey"/>
        </visual>
    </link>

    <joint name="joint_ee" type="fixed">
        <parent link="link3"/>
        <child link="end_effector"/>
        <origin xyz="0.4 0.0 0.0" rpy="0 0 0.0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="end_effector">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <origin xyz='0.0 0.0 0.0' rpy='0.0 0.0 0.0' />
        <material name="lighter_grey"/>
        </visual>
    </link>

</robot>
